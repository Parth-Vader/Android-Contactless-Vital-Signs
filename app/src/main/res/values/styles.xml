<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ImageButtonWithText" parent="@android:style/Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">22sp</item>
        <item name="android:drawablePadding">0sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#005941</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DefaultTextViewLeftSide">
        <item name="android:layout_width">wrap_content</item> <!-- WAS match_parent -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#A000</item> <!-- WAS #5000 -->
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20dp</item> <!-- WAS 29 -->
    </style>
    <style name="DefaultTextViewRightSide">
        <item name="android:layout_width">wrap_content</item> <!-- WAS match_parent -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#A000</item> <!-- WAS #5000 -->
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:onClick">onClickGoToEditStats</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:visibility">visible</item>
    </style>

</resources>
